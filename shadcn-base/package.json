  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:ue": "npm run build && npm run copy:all && npm run fix:html",
    "copy:all": "npm run copy:content && npm run copy:neon-root",
    "copy:content": "cp -r dist/* ../Noham_Base_Proj_Cpp/Content/UI/NEON/MainMenu/dist/ && cp ../neon-ue-web-main/neon-browser.js ../Noham_Base_Proj_Cpp/Content/UI/NEON/MainMenu/dist/neon.js",
    "copy:neon-root": "cp -r dist/* ../Noham_Base_Proj_Cpp/NEON/MainMenu/dist/ && cp ../neon-ue-web-main/neon-browser.js ../Noham_Base_Proj_Cpp/NEON/MainMenu/dist/neon.js",
    "fix:html": "sed -i 's|/src/neon.js|./neon.js|g' ../Noham_Base_Proj_Cpp/Content/UI/NEON/MainMenu/dist/index.html && sed -i 's|/src/neon.js|./neon.js|g' ../Noham_Base_Proj_Cpp/NEON/MainMenu/dist/index.html",
    "watch:ue": "vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
